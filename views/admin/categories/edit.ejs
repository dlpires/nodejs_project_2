<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Editar Categoria</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update">
                <input type="hidden" name="id" id="id" value="<%= category.id %>">
                <input class="form-control" type="text" name="title" id="title" value="<%= category.title %>" placeholder="Defina o titulo da Categoria">
                <br>
                <button class="form-control btn btn-success">Atualizar</button>
            </form>
        </div>
    </div>
</div>
