<%- include('partials/header.ejs') %>
<%- include('partials/homenavbar.ejs') %>
<div class="container">
    <hr>
    <div class="jumbotron">
        <h1 class="display-4">Bem-vindo!</h1>
        <p class="lead">Este é um simples blog para testar o nodejs.</p>
        <hr class="my-4">
        <p>Descrição detalhada!!!</p>
    </div>
    <% articles.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <%= article.title %>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success" type="button">Ler Artigo</a>
            </div>
        </div>
    <% }) %>

    <div class="row">
        <hr>
        <div class="col col-12">
            <a style="float:right" href="/articles/page/2">Next >></a>
        </div>
        
    </div>
    <hr>

</div>
<%- include('partials/footer.ejs') %>